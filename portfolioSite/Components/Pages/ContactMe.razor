<!--contact form goes here-->

<section class="contact-section py-5" style="background-color: rgb(96, 137, 161);">
    <div class="container">
        <h2 class="text-center text-tertiary mb-5">Contact Me</h2>
        <div class="row">
            <!-- Contact Form -->
            <div class="col-md-6">
                <!-- Form action points to Formspree's endpoint -->
                <form id="contactForm" method="POST" action="https://formspree.io/f/xovqjpaa">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" name="name" id="name" placeholder="Your Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" name="email" id="email" placeholder="Your Email" required>
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <input type="text" class="form-control" name="subject" id="subject" placeholder="Subject" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" name="message" id="message" rows="5" placeholder="Your Message" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
                <!-- Display a success or error message if needed -->
                <div id="statusMessage" class="mt-3"></div>
            </div>

            <!-- Contact Info and Social Links -->
            <div class="col-md-6">
                <h4>Get in Touch</h4>
                <p>If you have any questions or would like to work together, feel free to reach out to me. You can use the form, or connect via email or social media.</p>
                
                <ul class="list-unstyled">
                    <li><strong>Email:</strong> <em>ntshonas@outlook.com</em></li>
                    <li><strong>Phone:</strong> <em>063-432-7125</em></li>
                    <li><strong>Location:</strong> <em>Cape Town, Salt River, Durham Avenue</em></li>
                </ul>

                <h5>Connect with me:</h5>
                <div class="social-links">
                    <a href="https://github.com/MisterWestt11/" class="btn btn-outline-dark me-2" target="_blank"><i class="bi bi-github"></i> GitHub</a>
                    <a href="https://www.linkedin.com/in/spheleke-ntshona-6113822a4/" class="btn btn-outline-dark me-2" target="_blank"><i class="bi bi-linkedin"></i> LinkedIn</a>
                    
                </div>
            </div>
        </div>
    </div>
</section>


